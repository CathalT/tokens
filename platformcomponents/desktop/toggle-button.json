{
  "toggleButton": {
    "figma": "https://www.figma.com/file/vdL18BATeJAIq2JvGAjRPD/Components---Web?node-id=48160%3A80022",
    "comment": "Applied to circle and pill toggle buttons",
    "inactive": {
      "#normal": {
        "background": "@theme-button-secondary-normal",
        "border": "@theme-outline-button-normal",
        "text": "@theme-text-primary-normal"
      },
      "#hovered": {
        "background": "@theme-button-secondary-hover",
        "border": "@theme-outline-button-normal",
        "text": "@theme-text-primary-normal"
      },
      "#pressed": {
        "background": "@theme-button-secondary-pressed",
        "border": "@theme-outline-button-normal",
        "text": "@theme-text-primary-normal"
      },
      "disabled": {
        "background": "@theme-button-secondary-normal",
        "border": "@theme-outline-disabled-normal",
        "text": "@theme-text-primary-disabled"
      }
    },
    "active": {
      "#normal": {
        "background": "@theme-button-secondary-active-normal",
        "border": "@theme-outline-button-normal",
        "text": "@theme-text-primary-normal"
      },
      "#hovered": {
        "background": "@theme-button-secondary-active-hover",
        "border": "@theme-outline-button-normal",
        "text": "@theme-text-primary-normal"
      },
      "#pressed": {
        "background": "@theme-button-secondary-active-pressed",
        "border": "@theme-outline-button-normal",
        "text": "@theme-text-primary-normal"
      },
      "disabled": {
        "background": "@theme-button-secondary-active-normal",
        "border": "@theme-outline-disabled-normal",
        "text": "@theme-text-primary-disabled"
      }
    }
  }
}
